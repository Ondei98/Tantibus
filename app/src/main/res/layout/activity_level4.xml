<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".levels.Level4_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- TITLE -->
        <TextView
            style="@style/main_textView_style"
            android:layout_marginTop="@dimen/level_margin"
            android:fontFamily="@font/trade_winds"
            android:text="@string/lv4" />

        <!-- BACK BUTTON -->
        <Button
            android:id="@+id/back_button"
            style="@style/back_button_style" />

        <!-- TRIS LAYOUT -->
        <RelativeLayout
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <!-- 1ST ROW -->
            <Button
                android:id="@+id/puzzle_tile1"
                style="@style/tris_button_style"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:tag="00"
                android:text="" />

            <Button
                android:id="@+id/puzzle_tile2"
                style="@style/tris_button_style"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/puzzle_tile1"
                android:tag="01"
                android:text="" />

            <Button
                android:id="@+id/puzzle_tile3"
                style="@style/tris_button_style"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/puzzle_tile2"
                android:tag="02"
                android:text="" />

            <!-- 2ND ROW -->
            <Button
                android:id="@+id/puzzle_tile4"
                style="@style/tris_button_style"
                android:layout_below="@+id/puzzle_tile1"
                android:layout_alignParentStart="true"
                android:tag="10"
                android:text="" />

            <Button
                android:id="@+id/puzzle_tile5"
                style="@style/tris_button_style"
                android:layout_below="@+id/puzzle_tile1"
                android:layout_toEndOf="@id/puzzle_tile4"
                android:tag="11"
                android:text="" />

            <Button
                android:id="@+id/puzzle_tile6"
                style="@style/tris_button_style"
                android:layout_below="@+id/puzzle_tile1"
                android:layout_toEndOf="@id/puzzle_tile5"
                android:tag="12"
                android:text="" />

            <!-- 3RD ROW -->
            <Button
                android:id="@+id/puzzle_tile7"
                style="@style/tris_button_style"
                android:layout_below="@+id/puzzle_tile4"
                android:layout_alignParentStart="true"
                android:tag="20"
                android:text="" />

            <Button
                android:id="@+id/puzzle_tile8"
                style="@style/tris_button_style"
                android:layout_below="@+id/puzzle_tile4"
                android:layout_toEndOf="@id/puzzle_tile7"
                android:tag="21"
                android:text="" />

            <Button
                android:id="@+id/puzzle_tile9"
                style="@style/tris_button_style"
                android:layout_below="@+id/puzzle_tile4"
                android:layout_toEndOf="@id/puzzle_tile8"
                android:tag="22"
                android:text="" />

        </RelativeLayout>

        <!-- ENIGMA -->
        <TextView
            android:id="@+id/text_firstRow"
            style="@style/main_textView_style"
            android:layout_above="@+id/text_secondRow"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/trade_winds"
            android:text="@string/lv4_text1" />
        <TextView
            android:id="@+id/text_secondRow"
            style="@style/main_textView_style"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/level_margin"
            android:fontFamily="@font/trade_winds"
            android:text="@string/lv4_text2" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>